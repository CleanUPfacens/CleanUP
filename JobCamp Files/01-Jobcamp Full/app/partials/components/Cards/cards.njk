{% macro FeaturecardOne(options) %}
<!-- Start Feature One -->
<div class="bg-white px-8 pt-9 pb-7 rounded-4 mb-9 feature-cardOne-adjustments">
    <div class="d-block mb-7">
        <a href="#"><img src="{{options.BrandImage}}" alt=""></a>
    </div>
    <a href="#" class="font-size-3 d-block mb-0 text-gray">{{options.BrandName}}</a>
    <h2 class="mt-n4"><a class="font-size-7 text-black-2 font-weight-bold mb-4" href="">{{options.JobTitle}}</a></h2>
    {% if options.tags %}
    <ul class="list-unstyled mb-1 card-tag-list">
        {% for list in options.tags %}
        <li><a href="" class="bg-regent-opacity-15 text-{{list.color}} font-size-3 rounded-3">
                <i class="{{list.icon}} mr-2 font-weight-bold"></i> {{list.text}}
            </a></li>
        {% endfor %}
    </ul>
    {% endif %}
    <p class="mb-7 font-size-4 text-gray">{{options.jobDetails}}</p>
    <div class="card-btn-group">
        <a class="btn btn-green text-uppercase btn-medium rounded-3" href="#">Apply Now</a>
        <a class="btn btn-outline-mercury text-black-2 text-uppercase btn-medium rounded-3" href="#"><i
                class="icon icon-bookmark-2 font-weight-bold mr-4 font-size-4"></i> Save it</a>
    </div>
</div>
<!-- End Feature One -->
{% endmacro %}


{% macro FeatureCardTwo(options,tab) %}
<!-- Single Featured Job -->
<div class="pt-9 px-xl-9 px-lg-7 px-7 pb-7 light-mode-texts bg-white rounded hover-shadow-3 {{options.additionalOptions}}">
    <div class="row">
        <div class="col-md-6">
            <div class="media align-items-center">
                <div class="square-72 d-block mr-8">
                    <img src="{{options.logo}}" alt="">
                </div>
                <div>
                    {% if tab %}
                        <h3 class="mb-0 font-size-6 heading-default-color">{{options.title}}</h3>
                        <span class="font-size-3 text-default-color line-height-2 d-block">{{options.subtitle}}</span>
                    {% else %}
                        <h3 class="mb-0"><a class="font-size-6 heading-default-color" href="#">{{options.title}}</a></h3>
                        <a href="#" class="font-size-3 text-default-color line-height-2">{{options.subtitle}}</a>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-6 text-right pt-7 pt-md-5">
            <div class="media justify-content-md-end">
                <div class="image mr-5 mt-2">
                    <img src="./image/svg/icon-fire-rounded.svg" alt="">
                </div>
                <p class="font-weight-bold font-size-7 text-hit-gray mb-0"><span
                        class="text-black-2">{{options.srange}}</span> PLN</p>
            </div>
        </div>
    </div>
    <div class="row pt-8">
        <div class="col-md-7">
            {% if tab %}
            <ul class="d-flex list-unstyled mr-n3 flex-wrap">
                {% for liItem in options.tags %}
                <li>
                    <span class="bg-regent-opacity-15 min-width-px-96 mr-3 text-center rounded-3 px-6 py-1 font-size-3 text-black-2 mt-2 d-inline-block"
                        >{{liItem}}</span>
                </li>
                {% endfor %}
            </ul>
            {% else %}
                <ul class="d-flex list-unstyled mr-n3 flex-wrap">
                    {% for liItem in options.tags %}
                    <li>
                        <a class="bg-regent-opacity-15 min-width-px-96 mr-3 text-center rounded-3 px-6 py-1 font-size-3 text-black-2 mt-2"
                            href="#">{{liItem}}</a>
                    </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
        <div class="col-md-5">
            <ul class="d-flex list-unstyled mr-n3 flex-wrap mr-n8 justify-content-md-end">
                {% for liItem2 in options.widgets %}
                <li class="mt-2 mr-8 font-size-small text-black-2 d-flex">
                    <span class="mr-4" style="margin-top: -2px"><img src="{{liItem2.icon}}" alt=""></span>
                    <span class="font-weight-semibold">{{liItem2.text}}</span>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
<!-- End Single Featured Job -->
{% endmacro %}
